<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.askaudience.app"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->
    <platform name="winphone" />
    <author>Infini Systems Pvt Ltd</author>
    <preference name="windows-identity-name" value="InfiniSystemsPvtLtd.AskAudience" />
    <!-- Windows 8.1: -->
    <!-- Windows 10 (default): -->
<!--    <preference name="windows-appx-target" value="uap" />
     Windows 8.1: 
    <preference name="windows-appx-target" value="8.1-win" />-->
    <!-- Windows Phone 8.1: -->
    <preference name="windows-appx-target" value="8.1-phone" />




    <name>Ask Audience</name>

    <access origin="*" />
    <plugin name="cordova-plugin-console" spec="1.0.3" />
    <plugin name="cordova-plugin-device" spec="1.1.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
    <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <plugin name="cordova-plugin-x-socialsharing" spec="5.1.2" />
    <plugin name="cordova-plugin-x-toast" spec="2.5.2" />
    <plugin name="ionic-plugin-keyboard" spec="2.2.1" />


</widget>